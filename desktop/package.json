{
  "name": "shepwhispr",
  "version": "0.1.0",
  "description": "Voice-to-structured-prompt desktop app for vibe coders",
  "main": "dist/main/index.js",
  "author": "Golden Sheep AI",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build && electron .",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/renderer/*.html dist/renderer/ 2>/dev/null || true && cp -r src/renderer/*.css dist/renderer/ 2>/dev/null || true && mkdir -p dist/assets/icons && cp -r assets/icons/* dist/assets/icons/ 2>/dev/null || true",
    "start": "npm run build && electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "express": "^5.2.1",
    "sox-stream": "^2.0.6",
    "wav": "^1.0.2",
    "whisper-node": "^1.1.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/wav": "^1.0.4",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.goldensheep.shepwhispr",
    "productName": "ShepWhispr",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns"
    },
    "files": [
      "dist/**/*",
      "assets/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
